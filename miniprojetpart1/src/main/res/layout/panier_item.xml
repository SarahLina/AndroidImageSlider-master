<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/articleIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.95">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nom"
                android:layout_alignParentTop="true"

                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#ee6e73" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/couleur"
                android:layout_below="@+id/nom"


                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#ee6e73" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taille"
                android:layout_below="@+id/couleur"
                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#ee6e73" />
        </LinearLayout>

        <NumberPicker

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/numberPicker"
            android:layout_alignParentTop="true"

            android:layout_toLeftOf="@+id/supprimer"
            android:layout_alignBottom="@+id/taille"
            android:scaleX=".8"
            android:scaleY=".8"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""

            android:id="@+id/supprimer"
            android:drawableLeft="@android:drawable/ic_delete"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>


</RelativeLayout>