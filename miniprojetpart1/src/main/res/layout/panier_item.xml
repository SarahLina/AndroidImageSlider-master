<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:background="@drawable/mydrawable"
        android:elevation="2dp"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/articleIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.95">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nom"
                android:layout_alignParentTop="true"

                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#364F6B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/couleur"
                android:layout_below="@+id/nom"
                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#364F6B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prix"
                android:layout_below="@+id/couleur"
                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#364F6B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taille"
                android:layout_below="@+id/couleur"
                android:layout_toRightOf="@+id/articleIcon"
                android:text="test"
                android:textColor="#364F6B" />




        </LinearLayout>

        <NumberPicker

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/numberPicker"
            android:layout_alignParentTop="true"

            android:layout_toLeftOf="@+id/supprimer"
            android:layout_alignBottom="@+id/taille"
            android:scaleX=".8"
            android:scaleY=".8"/>



        <ImageButton style="@style/AppTheme"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:text="New Button"
            android:id="@+id/delete"
            android:elevation="5dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
             />



    </LinearLayout>


</RelativeLayout>